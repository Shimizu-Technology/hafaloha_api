<!-- app/views/password_mailer/reset_password.html.erb -->

<!-- 
  This is a typical table-based email layout for better client compatibility.
  Adjust fonts, colors, etc. to match your brand.
-->

<table width="100%" border="0" cellspacing="0" cellpadding="0"
       style="background-color: #f8f8f8; padding: 20px 0; font-family: Arial, sans-serif;">
  <tr>
    <td align="center">
      <table width="600" border="0" cellspacing="0" cellpadding="0"
             style="background-color: #ffffff; border-radius: 6px; overflow: hidden;">

        <!-- HEADER / BRAND -->
        <tr>
          <td align="center" style="background-color: #c1902f; padding: 20px;">
            <h1 style="margin: 0; font-size: 24px; color: #ffffff;">
              Reset Your Håfaloha Password
            </h1>
          </td>
        </tr>

        <!-- SPACER -->
        <tr>
          <td style="height: 20px;">&nbsp;</td>
        </tr>

        <!-- MAIN CONTENT -->
        <tr>
          <td style="padding: 0 30px 20px;">

            <p style="margin: 0 0 15px; color: #333; font-size: 16px; line-height: 24px;">
              Hi <strong><%= @user.first_name.presence || "Valued Customer" %></strong>,
            </p>

            <p style="margin: 0 0 15px; color: #333; font-size: 16px; line-height: 24px;">
              We received a request to reset the password for your account 
              (<strong><%= @user.email %></strong>).
            </p>

            <p style="margin: 0 0 15px; color: #333; font-size: 16px; line-height: 24px;">
              Please click the link below to reset your password:
            </p>

            <p style="margin: 0 0 15px; text-align: center;">
              <a href="<%= @url %>"
                 style="display: inline-block; background-color: #c1902f; color: #fff;
                        text-decoration: none; padding: 12px 20px; border-radius: 4px;
                        font-weight: bold; font-size: 16px;"
              >
                Reset My Password
              </a>
            </p>

            <p style="margin: 0 0 15px; color: #666; font-size: 14px; line-height: 20px;">
              Or copy and paste this link into your browser:
              <br/>
              <a href="<%= @url %>" style="color: #0672cb;"><%= @url %></a>
            </p>

            <p style="margin: 0; color: #333; font-size: 16px; line-height: 24px;">
              If you didn’t request this, you can ignore it. Your password won’t be changed.
            </p>
          </td>
        </tr>

        <!-- FOOTER -->
        <tr>
          <td style="padding: 20px 30px; background-color: #f2f2f2; color: #555;
                     font-size: 14px; line-height: 20px; border-top: 1px solid #ddd;">
            <p style="margin: 0;">
              <strong>Håfaloha</strong><br/>
              Tamuning, Guam | (671) 989-3444 | 11AM–9PM Daily
            </p>
          </td>
        </tr>

      </table>
    </td>
  </tr>
</table>
